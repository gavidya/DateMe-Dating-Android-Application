<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".Login">

    <RelativeLayout
        android:id="@+id/loginHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/imgViewLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/heart" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewLogo">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/white"
                android:text=""
                android:textSize="50dp" />

                <TextView
                    android:id="@+id/subParagraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#661b10"
                    android:text="Let's choose your match"
                    android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subParagraph"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/userName"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/input_field_shape"
                        android:fontFamily="sans-serif-black"
                        android:hint="User Name"
                        android:textColorHint="@color/white"
                        android:textAlignment="center" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/pass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/input_field_shape"
                        android:fontFamily="sans-serif-black"
                        android:textColorHint="@color/white"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textAlignment="center" />


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linearLayout"
                android:text="Log In"
                android:textAllCaps="true"
                android:background="@drawable/login_btn_bg"
                android:fontFamily="sans-serif-black"
                android:textColor="#ef435b"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp" />


            <TextView
                android:id="@+id/signUptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginBtn"
                android:text="Don't have an Account ?"
                android:textSize="15dp"
                android:layout_alignParentLeft= "true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/signUplink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginBtn"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="80dp"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:text="Sign Up Now"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fogotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signUplink"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="80dp"
                android:clickable="true"
                android:fontFamily="sans-serif-black"
                android:text="Fogot Password ?"
                android:textColor="@color/white"
                android:textSize="15dp" />



        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>